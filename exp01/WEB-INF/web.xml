<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    
    <display-name>Student Info App</display-name>
    
    <!-- ServletContext初始化参数 -->
    <context-param>
        <param-name>admin-email</param-name>
        <param-value>admin@example.com</param-value>
    </context-param>
    <context-param>
        <param-name>admin-tel</param-name>
        <param-value>13800138000</param-value>
    </context-param>
    
    <!-- FirstServlet 配置 -->
    <servlet>
        <servlet-name>FirstServlet</servlet-name>
        <servlet-class>com.demo.FirstServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>FirstServlet</servlet-name>
        <url-pattern>/first</url-pattern>
    </servlet-mapping>
    
    <!-- SecondServlet 配置 -->
    <servlet>
        <servlet-name>SecondServlet</servlet-name>
        <servlet-class>com.demo.SecondServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>SecondServlet</servlet-name>
        <url-pattern>/second</url-pattern>
    </servlet-mapping>
    
    <!-- ShowHeadersServlet 配置 -->
    <servlet>
        <servlet-name>ShowHeadersServlet</servlet-name>
        <servlet-class>com.demo.ShowHeadersServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>ShowHeadersServlet</servlet-name>
        <url-pattern>/showHeaders</url-pattern>
    </servlet-mapping>
    
    <!-- ExcelServlet 配置 -->
    <servlet>
        <servlet-name>ExcelServlet</servlet-name>
        <servlet-class>com.demo.ExcelServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>ExcelServlet</servlet-name>
        <url-pattern>/excel</url-pattern>
    </servlet-mapping>
    
    <!-- ConfigDemoServlet 配置 -->
    <servlet>
        <servlet-name>ConfigDemoServlet</servlet-name>
        <servlet-class>com.demo.ConfigDemoServlet</servlet-class>
        <init-param>
            <param-name>email</param-name>
            <param-value>marlin-phone@outlook.com</param-value>
        </init-param>
        <init-param>
            <param-name>telephone</param-name>
            <param-value>15398090483</param-value>
        </init-param>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>ConfigDemoServlet</servlet-name>
        <url-pattern>/configDemo.do</url-pattern>
    </servlet-mapping>
    
    <!-- CountServlet 配置 -->
    <servlet>
        <servlet-name>CountServlet</servlet-name>
        <servlet-class>com.demo.CountServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>CountServlet</servlet-name>
        <url-pattern>/count</url-pattern>
    </servlet-mapping>
    
</web-app>