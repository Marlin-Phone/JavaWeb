<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <display-name>实验六：Web事件处理与过滤器</display-name>
    
    <!-- 配置首页 -->
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    
    <!-- 注册ServletContext监听器 -->
    <listener>
        <listener-class>com.listener.MyServletContextListener</listener-class>
    </listener>
    
    <!-- 注册HttpSession监听器 -->
    <listener>
        <listener-class>com.listener.MySessionListener</listener-class>
    </listener>
    
    <!-- 注册ServletRequest监听器 -->
    <listener>
        <listener-class>com.listener.MyRequestListener</listener-class>
    </listener>
    
</web-app>