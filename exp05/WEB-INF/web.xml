<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <display-name>实验五：JDBC数据库访问与DAO设计模式</display-name>
    
    <!-- 配置首页 -->
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    
    <!-- InsertCustomerServlet -->
    <servlet>
        <servlet-name>InsertCustomerServlet</servlet-name>
        <servlet-class>com.servlet.InsertCustomerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InsertCustomerServlet</servlet-name>
        <url-pattern>/InsertCustomerServlet</url-pattern>
    </servlet-mapping>
    
    <!-- ActionServlet -->
    <servlet>
        <servlet-name>ActionServlet</servlet-name>
        <servlet-class>com.servlet.ActionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ActionServlet</servlet-name>
        <url-pattern>/ActionServlet</url-pattern>
    </servlet-mapping>
    
</web-app>